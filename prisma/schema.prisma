generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id             String    @id
  email          String    @unique
  username       String
  email_verified Int       @default(0)
  totp_key       Bytes?
  recovery_code  Bytes
  auth_session   Session[]
  key           Key[]
  trees          Tree[]
}

model Session {
  id                   String @id
  user_id              String
  active_expires       BigInt
  idle_expires         BigInt
  two_factor_verified  Int    @default(0)
  user                 User   @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

model Key {
  id              String  @id
  hashed_password String?
  user_id         String
  user            User    @relation(fields: [user_id], references: [id])

  @@index([user_id])
}

model Tree {
  id          String   @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  nodes       Node[]
  people      Person[]
  layouts     Layout[]
  owner       User     @relation(fields: [ownerId], references: [id])
  ownerId     String
}

model Person {
  id         String    @id @default(cuid())
  firstName  String
  lastName   String?
  birthDate  DateTime?
  deathDate  DateTime?
  gender     String?
  notes      String?
  tree       Tree      @relation(fields: [treeId], references: [id])
  treeId     String
  nodes      Node[]    @relation("PersonToNode")
  media      Media[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt
}

model Node {
  id        String   @id @default(cuid())
  type      String   // e.g., "PARENT", "SPOUSE", "CHILD"
  person    Person   @relation("PersonToNode", fields: [personId], references: [id])
  personId  String
  relatedTo Node[]   @relation("NodeToNode")
  relatedBy Node[]   @relation("NodeToNode")
  tree      Tree     @relation(fields: [treeId], references: [id])
  treeId    String
  position  String?  // Stores x,y coordinates for visual layout as JSON string
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Media {
  id          String   @id @default(cuid())
  url         String
  type        String   // e.g., "IMAGE", "DOCUMENT", "VIDEO"
  title       String?
  description String?
  person      Person   @relation(fields: [personId], references: [id])
  personId    String
  layout      Layout?  @relation(fields: [layoutId], references: [id])
  layoutId    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Layout {
  id          String   @id @default(cuid())
  name        String
  type        String   // e.g., "TREE", "TIMELINE", "GALLERY"
  config      String   // Stores layout-specific configuration as JSON string
  isDefault   Boolean  @default(false)
  tree        Tree     @relation(fields: [treeId], references: [id])
  treeId      String
  media       Media[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}